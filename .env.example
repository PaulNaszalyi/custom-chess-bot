# Lichess Bot Configuration
# Copy this file to .env and fill in your actual values

# REQUIRED: Your Lichess API token (get from https://lichess.org/account/oauth/token)
LICHESS_API_TOKEN=your_api_token_here

# REQUIRED: Bot username (your Lichess username after converting to bot account)
BOT_USERNAME=YourLichessBotUsername

# OPTIONAL: Bot settings (defaults provided)
CHALLENGE_RATING_MIN=800
CHALLENGE_RATING_MAX=1200
MAX_CONCURRENT_GAMES=3
PREFERRED_TIME_CONTROL=600+0
ENABLE_TOURNAMENTS=true
DEBUG_MODE=false

# OPTIONAL: Advanced settings
STYLE_MIMICRY_LEVEL=strict
ADAPTABILITY_FACTOR=0.3
RISK_TOLERANCE=0.2
EMERGENCY_TIME_THRESHOLD=30